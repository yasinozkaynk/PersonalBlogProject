@model List<RoleAssignViewModel>

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl-12 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Rol Ata</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="@Model[i].RoleID">
                        <input type="hidden" asp-for="@Model[i].Name">
                        <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input">
                        <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name </label>
                    </div>
                }
                <br /><br />
                <button class="btn btn-outline-info">Değişiklikleri Kaydet</button>
                <a href="/AdminRole/UserRoleList" class="btn btn-outline-danger">Kulanıcı Listesine Dön</a>
            </form>
        </div>
    </div>
</div>

