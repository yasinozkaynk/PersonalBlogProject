@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl-12 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">@Model.CategoryName Kategorisini Güncelle</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="form-control-label" for="input-username">Kategori Adı</label>
                                <input type="text" id="input-username" class="form-control disabled" asp-for="CategoryName" placeholder="Kategori Adı...">
                                <input type="hidden" id="input-username" class="form-control disabled" asp-for="CategoryID" placeholder="Kategori Adı...">
                                <input type="hidden" id="input-username" class="form-control disabled" asp-for="BlogCount" placeholder="Kategori Adı...">
                                <input type="hidden" id="input-username" class="form-control disabled" asp-for="Status" placeholder="Kategori Adı...">
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="form-control-label" for="input-username">Tarih</label>
                                <input type="date" id="input-username" class="form-control disabled" asp-for="AddedDate">
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-info">Güncelle</button>
            </form>
        </div>
    </div>
</div>
