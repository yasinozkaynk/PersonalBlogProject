@model BlogModel
@{
    ViewData["Title"] = "BlogDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl-12 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">@Model.BlogDto.Title</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form>
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="form-group">
                                <label class="form-control-label" for="input-username">Yazar</label>
                                <input type="text" id="input-username" class="form-control disabled" placeholder="Username" value="@Model.BlogDto.WriterName @Model.BlogDto.WriterSurname">
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="form-group">
                                <label class="form-control-label" for="input-username">Başlık</label>
                                <input type="text" id="input-username" class="form-control disabled" placeholder="Username" value="@Model.BlogDto.Title">
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="form-group">
                                <label class="form-control-label" for="input-email">Resim Adresi</label>
                                <input type="email" id="input-email" class="form-control" placeholder="@Model.BlogDto.ImageUrl">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label">İçerik</label>
                                <textarea rows="4" class="form-control" placeholder="A few words about you ...">@Model.BlogDto.Content</textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label" for="input-email">Okunma Sayısı</label>
                                <input type="number" id="input-number" class="form-control" placeholder="@Model.BlogDto.ReadCount">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label" for="input-email">Eklenme Tarihi</label>
                                <input type="datetime" id="input-number" class="form-control" placeholder="@Model.BlogDto.DateAdded">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label" for="input-email">Son Güncelle Tarihi</label>
                                <input type="datetime" id="input-number" class="form-control" placeholder="@Model.BlogDto.DateOfAdded">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

