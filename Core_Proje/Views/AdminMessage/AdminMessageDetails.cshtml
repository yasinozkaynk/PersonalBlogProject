@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "AdminMessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-xl-12 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">@Model.Subject</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form>
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="form-group">
                                <label class="form-control-label" for="input-username">Gönderen</label>
                                <input type="text" id="input-username" class="form-control disabled" placeholder="Username" value="@Model.SenderName">
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="form-control-label" for="input-username">EMail</label>
                                <input type="email" id="input-username" class="form-control disabled" placeholder="Username" value="@Model.Sender">
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="form-control-label" for="input-email">Gönderi Tarihi</label>
                                <input type="datetime" id="input-email" class="form-control" placeholder="@Model.Date">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-control-label">İçerik</label>
                                <textarea rows="4" class="form-control" placeholder="A few words about you ...">@Model.MessageContent</textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="/AdminMessage/ReceiverMessageList" class="btn btn-primary mr-2">Admin Gelen Mesajlar</a>
                <a href="/AdminMessage/SenderMessageList" class="btn btn-warning mr-2">Admin Giden Mesajlar</a>
            </form>
        </div>
    </div>
</div>

