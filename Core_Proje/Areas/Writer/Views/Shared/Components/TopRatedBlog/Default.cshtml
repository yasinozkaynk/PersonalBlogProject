@using Entities.DTOs
@model List<BlogDto>
@{
    Layout = null;
}

<!DOCTYPE html>

<div class="card">
    <div class="card card-body">
        <div class="card  card-title">
            En Çok Okunan Makaleler
        </div>
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card position-relative">
                    <div class="card-body">
                        <div id="detailedReports" class="carousel slide detailed-report-carousel position-static pt-2" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <div class="row">
                                        <div class="col-md-12 col-xl-3 d-flex flex-column justify-content-start">
                                            <div class="ml-xl-4 mt-3">
                                                <p class="card-title">En Çok Okunan Makale</p>
                                                <h3 class="font-weight-500 mb-xl-4 text-primary">
                                                    Blog Post Title
                                                </h3>
                                            </div>
                                        </div>
                                        <div class="col-md-12 col-xl-9">
                                            <div class="row">
                                                <div class="col-md-12 border-right">
                                                    <div class="table-responsive mb-3 mb-md-0 mt-3">
                                                        <table class="table table-borderless report-table">

                                                            @foreach (var item in Model)
                                                            {
                                                                @if (item.ReadCount <= 50)
                                                                {
                                                                    <tr>
                                                                        <td class="text-muted">@item.Title</td>
                                                                        <td class="w-100 px-0">
                                                                            <div class="progress progress-md mx-4">
                                                                                <div class="progress-bar bg-danger" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                                                                            </div>
                                                                        </td>
                                                                        <td><h5 class="font-weight-bold mb-0">@item.ReadCount</h5></td>
                                                                    </tr>
                                                                }
                                                                @if (item.ReadCount >= 51)
                                                                {
                                                                    <tr>
                                                                        <td class="text-muted">@item.Title</td>
                                                                        <td class="w-100 px-0">
                                                                            <div class="progress progress-md mx-4">
                                                                                <div class="progress-bar bg-primary" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                                                            </div>
                                                                        </td>
                                                                        <td><h5 class="font-weight-bold mb-0">@item.ReadCount</h5></td>
                                                                    </tr>
                                                                }

                                                            }
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
