@model PersonalBlog_Proje.Areas.WriterBlog.Models.BlogModel
@addTagHelper"*,Microsoft.AspNetCore.Mvc.TagHelpers"
@addTagHelper"*,Core_Proje"

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}


<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
    <div class="row mb-5">
        @foreach (var item in Model.BlogDtos)
        {
            <div class="col-md-6 card">
                <a href="single.html">
                    <img src="@item.ImageUrl" class="card-img-top img-fluid" alt="">
                </a>
                <div class="card-body">
                    <ul class="blog-icons my-0">
                        <li>
                            <a href="#">
                                <i class="far fa-calendar-alt"></i> @(((DateTime)item.DateAdded).ToString("MMM.dd.yyyy"))
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fas fa-eye"></i> @item.ReadCount
                            </a>
                        </li>
                    </ul>
                    <p><a style="color:black">Yazar:</a>@item.WriterName @item.WriterSurname</p>
                    <h5 class="card-title my--3 ">
                        <a href="single.html">@item.Title</a>
                    </h5>
                    <p class="card-text mb-3">@item.Content.Substring(0, 50)...</p>
                    <a href="/WriterBlog/Blog/BlogDetails/@item.BlogID" class="btn btn-primary read-m">Daha Fazla Oku</a>
                </div>
            </div>
        }
    </div>
    <blog-list-pager></blog-list-pager>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-left mt-4">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Geri</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="/WriterBlog/Blog/Index?page=1">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="/WriterBlog/Blog/Index?page=2">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="/WriterBlog/Blog/Index?page=3">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">İleri</a>
            </li>
        </ul>
    </nav>
</div>


